<script src="js/admin/orders/list.js"></script>
<script src="https://cdn.sheetjs.com/xlsx-0.20.0/package/dist/xlsx.full.min.js"></script>

<div class="logoPrint">
    <img src="img/store/logo/logo.png" width="200">
</div>
<br>
<h1 class="text-center mb-5 h1Print">All Orders</h1>
<div>
    <div class="form-group sCriteria">
        <fieldset>
            <legend>Search Criteria</legend>
            <label><input value="nOrder" type="radio" name="searchCriteria" checked> Order Number</label>
            <br>
            <label><input value="pName" type="radio" name="searchCriteria"> Product Name</label>
        </fieldset>
    </div>
    <div class="text-right exportButtons">
        <button id="exportPDF" class="btn btn-primary">Export to PDF</button>
        <button id="exportEXCEL" class="btn btn-primary">Export to EXCEL</button>
    </div>
    <div class="form-group sInput">
        <label>Search Terms</label>
        <div class="input-group mb-3">
            <input placeholder="Search Terms" class="form-control" type="text" id="inputSearch">
            <div>
                <button class="btn btn-outline-primary" type="button" id="btnSearch"><i class="fas fa-search"></i> Search</button>
            </div>
        </div>
    </div>

    <table id="ordersTable" class="table table-striped">
        <thead>
            <th>Order</th>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </thead>
        <tbody>
            <% list.forEach(function(value, index) { %>
                <tr>
                    <td><%= value.orderId %></td>
                    <td><%= value.productName %></td>
                    <td><%= value.productItemQuantity %></td>
                    <td>$ <%= parseFloat(value.productItemPrice).toFixed(2) %></td>
                    <td>$ <%= (value.productItemPrice * value.productItemQuantity).toFixed(2) %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>