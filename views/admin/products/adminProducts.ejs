<script src="/js/admin/products/delete.js"></script>

<div>
    <h1>All Products</h1>
    <div>
        <a href="/products/create" class="btn btn-primary"><i class="fas fa-plus"></i> New Product</a>
    </div>
    <div class="table-responsive" style="margin-top: 15px;">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Category</th>
                    <th>Brand</th>
                    <th>Price</th>
                    <th>Action</th> 
                </tr>
            </thead>
            <tbody>
                <% listProducts.map(function(value, index) { %>
                    <tr>
                        <td><img width="50" src="<%= value.productImage %>" alt="<%= value.productName %>"></td>
                        <td><%= value.produtCode %></td>
                        <td><%= value.productName %></td>
                        <td><%= value.productQuantity %></td>
                        <td><%= value.categoryName %></td>
                        <td><%= value.brandName %></td>
                        <td><%= value.productPrice %></td>              
                        <td>
                            <div>
                                <a href="/products/update/<%= value.productId %>" class="btn btn-primary"> <i class="fas fa-pen"></i></a>
                                <button data-id="<%=value.productId %>" class="btn btn-danger btnDelete"><i class="fas fa-trash"></i></button>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

