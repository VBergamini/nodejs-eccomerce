<div>
    <h1>Create a New User</h1>
    <p class="userCreateMsg mt-2"></p>
    <div>
        <div class="form-group">
            <label for="userName">Name:</label>
            <input class="form-control" type="text" id="userName" />
        </div>
        <div class="form-group">
            <label for="userEmail">Email:</label>
            <input class="form-control" type="email" id="userEmail" />
        </div>
        <div class="form-group">
            <label for="userProfile">Profile:</label>
            <select class="form-control" id="userProfile">
                <option value="0">--Select--</option>
                <% listProfile.map(function(value, index) { %>
                <option value="<%= value.profileId %>"><%= value.profileDescription %></option>
                <% }) %>
            </select>
        </div>
        <div class="form-group">
            <label for="userPassword">Password:</label>
            <input class="form-control" type="password" id="userPassword"/>
        </div>
        <div class="form-group">
            <label for="userActive">
                <input class="form-check-label mr-2" id="userActive" type="checkbox" /> Active
            </label>
        </div>
        <div>
            <button id="btnCreate" class="btn btn-primary">Create</button>
            <a class="btn btn-secondary" href="/users">Back</a>
        </div>
    </div>
</div>
<script src="/js/admin/users/create.js"></script>