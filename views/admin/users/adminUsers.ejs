<div>
    <h1>All Users</h1>
    <a class="btn btn-primary" href="/users/create">Create User</a>
    <table style="margin-top:10px" class="table table-stripped">
        <thead>
            <tr class="align-middle text-center">
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Profile</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% listUsers.map(function(value, index) { %>
            <tr class="align-middle text-center">
                <td class="align-middle"><%= value.userId %></td>
                <td class="align-middle"><%= value.userName %></td>
                <td class="align-middle"><%= value.userEmail %></td>
                <td class="align-middle"><%= value.profileDescription %></td>
                <td class="align-middle"><%= value.userActive %></td>
                <td class="align-middle">
                    <div>
                        <a href="/users/update/<%= value.userId %>" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                        <button data-id="<%= value.userId %>" class="btn btn-danger btnDelete"><i class="fas fa-trash"></i></button>
                    </div>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<script src="/js/admin/users/delete.js"></script>