<script src="/js/admin/users/update.js"></script>
<div>
    <h1>Update User</h1>

    <div>
        <input id="userId" type="hidden" value="<%= user.userId %>"/>
        <div class="form-group">
            <label for="userName">Name:</label>
            <input value="<%= user.userName %>" class="form-control" type="text" id="userName" />
        </div>
        <div class="form-group">
            <label for="userEmail">Email:</label>
            <input value="<%= user.userEmail %>" class="form-control" type="email" id="userEmail" />
        </div>
        <div class="form-group">
            <label for="userProfile">Profile:</label>
            <select class="form-control" id="userProfile">
                <option value="0">--Select--</option>
                <% listProfile.map(function(value, index) { %>
                    <% if(user.profileId == value.profileId) { %>
                        <option selected value="<%= value.profileId%>"><%= value.profileDescription %></option>
                    <% } else { %>
                        <option value="<%= value.profileId%>"><%= value.profileDescription %></option>
                    <% } %>
                <% }) %>
            </select>
        </div>
        <div class="form-group">
            <label for="userPassword">Password:</label>
            <input value="<%= user.userPassword %>" class="form-control" type="password" id="userPassword"/>
        </div>
        <div class="form-group">
            <label for="userActive">
                <% if (user.userActive == 'Y') { %>
                    <input checked class="form-check-label mr-2" id="userActive" type="checkbox" /> Ativo
            <% } else { %>
                    <input class="form-check-label mr-2" id="userActive" type="checkbox" /> Ativo
                <% } %>
                
            </label>
        </div>

        <div>
            <button id="btnUpdate" class="btn btn-primary">Update</button>
            <a class="btn btn-secondary" href="/users">Back</a>
        </div>
    </div>
</div>