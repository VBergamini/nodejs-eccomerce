<div>
  <h1>Update Category</h1>
</div>
<div>
  <form>
    <input type="hidden" value="<%= category.categoryId %>" id="inputId" />
    <div class="form-group">
      <label for="inputName">Category Name</label>
      <input type="text" class="form-control" id="inputName" value="<%= category.categoryName %>"/>
    </div>
    <div class="form-group">
      <label for="inputImage">Category Image</label>
      <input class="form-control" type="file" id="inputImage" />
    </div>
    <div style="padding:10px;">
      <img alt="<%= category.categoryName %>" src="<%= category.categoryImage %>" width="200" id="imagePreview">
    </div>
    <div>
      <button class="btn btn-primary" type="button" id="btnUpdate">Update</button>
      <a href="/categories" class="btn btn-default">Back</a>
    </div>
  </form>
</div>
<script src="/js/admin/categories/update.js"></script>