<script src="/js/admin/categories/delete.js"></script>
<div>
    <h1>All Categories</h1>

    <div>
        <a href="/categories/create" class="btn btn-primary"><i class="fas fa-plus"></i> New Category</a>
    </div>

    <div class="table-responsive" style="margin-top: 15px;">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% categoryList.map(function(value, index) { %>
                    <tr>
                        <td><img width="50" src="<%= value.categoryImage %>" alt="<%= value.categoryName %>"></td>
                        <td><%= value.categoryId %></td>
                        <td><%= value.categoryName %></td>
                        <td>
                            <div>
                                <a href="/categories/update/<%= value.categoryId %>" class="btn btn-primary"> <i class="fas fa-pen"></i></a>
                                <button data-id="<%=value.categoryId %>" class="btn btn-danger btnDelete"><i class="fas fa-trash"></i></button>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>