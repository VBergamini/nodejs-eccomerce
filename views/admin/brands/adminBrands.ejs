<script src="/js/admin/brands/delete.js"></script>
<div>
    <h1>All Brands</h1>
    <div>
        <a href="/brands/create" class="btn btn-primary"><i class="fas fa-plus"></i> New Brand</a>
    </div>
    <div class="table-responsive" style="margin-top: 15px;">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% brandList.map(function(value, index) { %>
                    <tr>
                        <td><img width="50" src= "<%= value.brandImage %> " alt=" <%= value.brandName %>"/></td>
                        <td><%= value.brandId %></td>
                        <td><%= value.brandName %></td>
                        <td>
                            <div>
                                <a href="/brands/update/<%= value.brandId %>" class="btn btn-primary"> <i class="fas fa-pen"></i></a>
                                <button data-id="<%=value.brandId %>" class="btn btn-danger btnDelete"><i class="fas fa-trash"></i></button>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

